<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_context"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/content_img_note"
        android:layout_width="@dimen/width_300"
        android:layout_height="@dimen/height_90"
        android:layout_marginBottom="@dimen/margin_16"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_wallpaper_24" />

    <TextView
        android:id="@+id/note_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        tools:text="@string/note_example" />

    <TextView
        android:id="@+id/note_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:textSize="@dimen/default_text_size"
        tools:text="@string/default_date" />

    <TextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:textSize="@dimen/subtitle_text_size"
        android:textStyle="italic"
        tools:text="@string/content_example" />

</LinearLayout>